<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="ImageStyle" >
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">3</item>
		<item name="android:layout_width">0dp</item>
		<item name="android:onClick">showTime</item>
    </style>
    
    <style name="PriceStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
		<item name="android:layout_width">0dp</item>
		<item name="android:text">@string/money_sign</item>
	</style>
	
	<style name="ImageStyle.LeftCar">
        <item name="android:src">@drawable/left_car</item>
    </style>
    
    <style name="ImageStyle.RightCar">
        <item name="android:src">@drawable/right_car</item>
        <item name="android:visibility">invisible</item>
    </style>


</resources>
